{
    "github.copilot.nextEditSuggestions.enabled": true,
    "editor.selectionClipboard": false,
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": true,
        "scminput": false
    },
    "remote.autoForwardPortsSource": "hybrid",
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "extensions.ignoreRecommendations": true,
    "files.autoSave": "afterDelay",
    "workbench.editor.enablePreview": false,
    "workbench.colorCustomizations": {
        "editorGutter.addedBackground": "#202020",
        "editorGutter.deletedBackground": "#202020",
        "editorGutter.modifiedBackground": "#202020",
        "editorOverviewRuler.addedForeground": "#202020",
        "editorOverviewRuler.modifiedForeground": "#202020",
        "editorOverviewRuler.deletedForeground": "#202020"
    },
    "workbench.colorTheme": "Default Dark+",
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "workbench.editor.tabSizing": "shrink",
    "explorer.confirmDragAndDrop": false,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "editor.find.cursorMoveOnType": false,
    "js/ts.implicitProjectConfig.experimentalDecorators": true,
    "workbench.editor.showTabs": "single",
    "editor.wordWrap": "on",
    "editor.wrappingIndent": "deepIndent",
    "editor.cursorStyle": "line",
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "ruff.lint.ignore": [
        "I001" // Hide sorting-order violations; they'll be auto-fixed.
    ],
    "editor.renderWhitespace": "boundary",
    "window.zoomLevel": 1.7,
    "workbench.startupEditor": "none",
    "editor.inlineSuggest.enabled": true,
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "always",
            "source.unusedImports": "always"
        },
    },
    "editor.formatOnPaste": true,
    "editor.minimap.enabled": false,
    "outline.showVariables": false,
    "outline.showConstants": false,
    "python.analysis.autoImportCompletions": true,
    "explorer.decorations.colors": false,
    "editor.formatOnSave": true,
    "workbench.sideBar.location": "right",
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "files.trimTrailingWhitespace": true,
    "files.autoSaveDelay": 10,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "workbench.layoutControl.enabled": false,
    "editor.lineNumbers": "on",
    "python.envFile": "${workspaceFolder}/test.env",
    "diffEditor.maxComputationTime": 0,
    "testing.automaticallyOpenTestResults": "neverOpen",
    "python.testing.pytestArgs": [
        "src"
    ],
    "workbench.externalBrowser": "firefox",
}
